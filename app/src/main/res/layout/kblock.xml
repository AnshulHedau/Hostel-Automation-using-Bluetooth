<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.vituniversity.hostelautomation.KBlock">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="K - Block"
        android:id="@+id/tvKBlock"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="5dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/block_border">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lift 1"
                android:id="@+id/bLift1"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="@drawable/lift_border"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lift 3"
                android:id="@+id/bLift3"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="@drawable/lift_border"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_weight="0.7">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="9th Floor"
                android:id="@+id/b9Floor"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/floor_border"
                android:layout_weight="1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="8th Floor"
                android:id="@+id/b8Floor"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/floor_border"
                android:layout_weight="1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="7th Floor"
                android:id="@+id/b7Floor"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/floor_border"
                android:layout_weight="1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="6th Floor"
                android:id="@+id/b6Floor"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/floor_border"
                android:layout_weight="1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="5th Floor"
                android:id="@+id/b5Floor"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/floor_border"
                android:layout_weight="1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="4th Floor"
                android:id="@+id/b4Floor"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/floor_border"
                android:layout_weight="1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="3rd Floor"
                android:id="@+id/b3Floor"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/floor_border"
                android:layout_weight="1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="2nd Floor"
                android:id="@+id/b2Floor"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/floor_border"
                android:layout_weight="1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="1st Floor"
                android:id="@+id/b1Floor"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/floor_border"
                android:layout_weight="1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Ground Floor"
                android:id="@+id/b0Floor"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/floor_border"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lift 2"
                android:id="@+id/bLift2"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="@drawable/lift_border"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lift4"
                android:id="@+id/bLift4"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="@drawable/lift_border"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
